{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "java",
        "name": "Application",
        "request": "launch",
        "mainClass": "com.dancea.microservice.Application",
        "vmArgs": "-Xms2G -Xmx4G",
        "projectName": "microservice"
      },
      {
        "type": "java",
        "name": "Launch Java Application",
        "request": "launch",
        "mainClass": "com.example.Main",
        "cwd": "${workspaceFolder}",
        "vmArgs": "-Xms2G -Xmx4G -Dspring.profiles.active=dev",
        "console": "integratedTerminal"
      }
    ]
}